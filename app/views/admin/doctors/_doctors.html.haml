.col-xs-8.col-xs-offset-2
  = link_to 'New doctor', new_admin_doctor_path, class: 'btn btn-primary'

  .col-xs-offset-4
    .pagination
      = paginate @doctors

  %table.table.table-hover
    %thead
      %tr
        %th Имя
        %th Фамилия
        %th Специальности
        %th Фото
        %th
    %tbody
    - @doctors.each do |d|
      %tr
        %td= d.first_name
        %td= d.last_name
        %td= to_string(d.specialities)
        %td= image_tag d.photo.url(:thumb)
        %td
          = link_to "X", admin_doctor_path(d), method: :delete, class: 'btn btn-danger'
          = link_to "Edit", edit_admin_doctor_path(d), class: 'btn btn-success'

  .col-xs-offset-4
    .pagination
      = paginate @doctors
