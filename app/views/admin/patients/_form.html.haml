.col-xs-4.col-xs-offset-4
  = bootstrap_form_for [:admin, @patient] do |f|
    - if @patient.errors.any?
      #error_explanation
        %h2
          = pluralize(@patient.errors.count, "error")
          prohibited this patient from being saved:
        %ul
          - @patient.errors.full_messages.each do |message|
            %li= message

    = f.text_field :first_name
    = f.text_field :last_name
    = f.text_field :work_position
    = f.number_field  :personal_numner

    = f.label :problems
    = text_field_tag :problems, to_string(@patient.problems), class: 'form-control'

    = f.file_field :photo

    .actions
      = f.submit
