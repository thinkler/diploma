.col-xs-2.col-xs-offset-2
  .thumbnail.search-field
    %h3.center Поиск пациента
    = search_form_for [:doctor, @q] do |f|
      = f.label "Фамилия"
      = f.search_field :last_name_cont, class: 'form-control'

      = f.label "Проблемы"
      = f.search_field :problems_title_cont, class: 'form-control'

      = f.label "Должность"
      = f.search_field :work_position_cont, class: 'form-control'

      = f.submit "Поиск", class: 'btn btn-success'

    = link_to 'Сбросить', doctor_patients_path, class: 'btn btn-default'

#patients.col-xs-5
  = render partial: 'patients'
