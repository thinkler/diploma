.container
  %h1.center Посещения

  .col-xs-2.well.well-sm
    =link_to "Прошлые", doctor_tickets_path(time: 'past')
    |
    =link_to "Будущие", doctor_tickets_path

  .col-xs-12
    - @tickets.each do |t|
      .col-xs-3
        .thumbnail
          Время:
          = t.time
          %br/
          Дата:
          = t.date.strftime("%d.%m.%y") if t.date
          %br/
          Пациент:
          = link_to t.doctor.first_name + " " + t.doctor.last_name, doctors_path(q: {last_name_eq: t.doctor.last_name})
          - if t.equipment
            %br/
            Оборудование:
            = t.equipment.title
          %br/
          Специальность:
          = t.speciality.title
          %br/
          = link_to "Отменить", "", class: 'btn btn-default'
          = link_to "Перенести", "", class: 'btn btn-default'


  .col-xs-offset-3
    .pagination
      = paginate @tickets
