= form_for(Patient.new, as: :patient, url: patient_sign_in_path) do |f|
  .field
    = f.label "Имя"
    %br/
    = f.text_field :first_name, autofocus: true, class: 'form-control'
  .field
    = f.label "Фамилия"
    %br/
    = f.text_field :last_name, autofocus: true, class: 'form-control'
  .field
    = f.label "Личный номер"
    %br/
    = f.number_field :personal_number, autofocus: true, class: 'form-control'
  %br
    .actions
      = f.submit "Войти", class: 'btn btn-default'
