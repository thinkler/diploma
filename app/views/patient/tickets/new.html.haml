%br


.col-xs-3
  %h4 Doctor
  = text_field_tag 'search', nil, id: 'doc-search'
  %br/
  %br/
  - if @doctor || @doctors.length == 1
    - doc = @doctor || @doctors.last
    %h1= doc.first_name
  - else
    #doctors= render partial: 'doctors'

.col-xs-3
  %h4 Equipment
  = text_field_tag 'search', nil, id: 'eq-search'
  %br/
  %br/
  - if @equip || @equipment.length == 1
    - eq = @equip || @equipment.last
    %h1= eq.title
  - else
    #equipment= render partial: 'equipment'

.col-xs-3
  %h4 Speciality
  = text_field_tag 'search', nil, id: 'spec-search'
  %br/
  %br/
  - if @spec || @specialities.length == 1
    - equip = @spec || @specialities.last
    %h1= equip.title
  - else
    #specialities= render partial: 'specialities'

